<p id="notice"><%= notice %></p>

<div>
<% if @listing.picture.attached? %>
  <%=image_tag @listing.picture, alt: @listing.title %>
  <% else %>
   <%=image_tag "https://placekitten.com/200/300", alt: @listing.title %>
   <% end %>
</div>
<% if @listing.sold %>
<p>SOLD</p>
<%elsif current_user && current_user.id == @listing.user_id%>
<p>Don't buy your own item, it's weird</p>
<% elsif current_user %>
<%= button_to "buy me!", place_order_path %>
<% else %>
<p>Please log in to make a purchase</p>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @listing.condition %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Sold:</strong>
  <%= @listing.sold %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @listing.category_id %>
</p>

<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %>

        <% if current_user && current_user.id == @listing.user_id %>
        <td><%= link_to 'Edit', edit_listing_path(@listing) %></td>
        <% end %>
